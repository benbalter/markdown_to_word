#!/usr/bin/env ruby

require_relative '../lib/markdown_to_word'

if ARGV.size != 1 || ARGV[0] == "--help"
  puts "Usage: bundle exec m2w [markdown]"
  exit 1
end

if ARGV[0] == "--version"
  puts "MarkdownToWord v#{MarkdownToWord::VERSION}"
else
  doc = MarkdownToWord.convert(ARGV[0])
  puts doc.contents
end
